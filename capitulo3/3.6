#include <stdio.h>

/* N贸mina de profesores.
El programa, al recibir como datos los salarios de los profesores de una
universidad, obtiene la n贸mina y el promedio de los salarios.
I: variable de tipo entero.
SAL, NOM y PRO: variables de tipo real. */
void main(void)
{
    int I = 1;
    float SAL, PRO, NOM = 0;
    printf("Ingrese el salario del profesor: ");
    /* Observa que al menos se necesita ingresar el salario de un profesor para que no ocurra un error de ejecuci贸n del programa. */
    scanf("%f", &SAL);
    do
    {
        NOM = NOM + SAL;
        I = I + 1;
        printf("Ingrese el salario del profesor (-0 para terminar): ");
        scanf("%f", &SAL);
    } while (SAL != 0);
    PRO = NOM / (I - 1);
    printf("\nN贸mina: %.2f \t Promedio de salarios: %.2f", NOM, PRO);
}
